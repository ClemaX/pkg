# vim: filetype=sh
# shellcheck shell=bash
# shellcheck disable=SC2034

name="libft"
version="1.0"

sources=("https://github.com/ClemaX/libft.git:master")
# install=("libft.a:/lib/libft.a:rw:r:r")

prepare()
{
	echo "Preparing build..."
}

build()
{
	echo "Running build, DESTDIR=$DESTDIR"

	make -C "$SRCDIR/libft-master" NAME=libft.a libft.a clean 

	install -D "$SRCDIR/libft-master/libft.a" "./$USRLIBDIR/libft.a"
}
